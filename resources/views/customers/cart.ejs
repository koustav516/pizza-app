<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/assets/images/cart-black.png" alt="Cart">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img class="w-24" src="<%= pizza.item.image %>" alt="pizza">
                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.quantity %> Pcs</span>
                <span class="font-bold text-lg">₹<%= pizza.item.price * pizza.quantity %></span>
            </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2">₹<%= session.cart.totalPrice %></span>
            </div>
            <% if(user){ %>
            <div>
                <form action="/orders" method="POST" class="mt-12">
                    <input name="phone" class="border border-gray-400 rounded-lg p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
                    <input name="address" class="border border-gray-400 rounded-lg p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button>
                    </div>
                </form>
            </div>
            <% }else { %>
            <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
            <% } %>
        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart is Empty</h1>
            <p class="text-gray-500 text-lg mb-12">You haven't added any pizza yet.
                <br>To order a pizza go to the main page
            </p>
            <img class="w-2/5 mx-auto" src="/assets/images/empty-cart.png" alt="Empty Cart">
            <a href="/" class="btn-primary text-white font-bold mt-12 inline-block px-6 py-2 rounded-full">Go back</a>
        </div>
    </div>
    <% } %>
</section>    

